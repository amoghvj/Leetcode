//Java

class Solution {
    public int[] sortByBits(int[] arr) {
        int arrSize = arr.length;
        for (int i = 0; i < arrSize - 1; i++) {
            int k = i, temp = arr[i];
            for (int j = i; j < arrSize; j++) {
                int bin1 = 0, bin2 = 0;
                for (int a = arr[k]; a != 0; bin1 += a % 2, a /= 2)
                    ;
                for (int a = arr[j]; a != 0; bin2 += a % 2, a /= 2)
                    ;
                k = ((bin1 == bin2) ? (arr[j] < arr[k]) : (bin1 > bin2)) ? j : k;
            }
            if (i == k)
                continue;
            arr[i] = arr[k];
            arr[k] = temp;
        }
        return arr;

    }
}
