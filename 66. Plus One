//Java

class Solution {
    public int[] plusOne(int[] digits) {
        int ret[] = new int[digits.length + 1], carry = 1;
        for(int i = 1; i <= digits.length; i++) {
            digits[digits.length - i] = digits[digits.length - i] + carry;
            carry = 0;
            if(digits[digits.length - i] == 10) {
                digits[digits.length - i] = 0;
                carry = 1;
            }
            ret[ret.length - i] = digits[digits.length - i];
        }
        ret[0] = 1;
        return (carry == 1) ? ret : digits;
    }
}
